</head>
<body>
	<div align=left id="header">
		<img src="img/small-logo.png"/> <label id="title">CEREBRATON</label>
        <label id="nusuario"> Bienvenido <%= usuario %> </label>
    </div>
    <div id="menu">
        <table id="lista">
        <td class="seccion"><a href="/entrada">Inicio</a></td>
        <td class="seccion"><a href="perfilProfesor.ejs">Perfil</a></td>
        <td class="seccion"><a href="/grupos">Grupos</a></td>
        <td class="seccion seleccionado"><a href="/materiales">Materiales</a></td>
        <td class="seccion"><a href="/estadisticas">Estadisticas</a></td>
        </table>
    </div>
    <div id="body" align=center>
        <div id="tituloSeccion">
        Materiales
        </div>
        <div id="inicial">
        <div id="gpo"> 
             <input type="button" onclick="location.href='/altaMateriales'" value="Agregar Material" name="boton" />
            <br/>
            <table id="concentrado">
                <th> Clave </th>
                <th> Nombre </th>
                <th> Grupo </th>
                <th> Opciones </th>        
                <% for(var i=0; i < materiales.length; i++) { %>
                    <form action="/cambiosMaterial" method="POST">
                    <tr>
                        <td> 
                             <input type="text" value=<%= materiales[i].id_referencia%> name="idMaterial" readonly></input> 
                        </td>
                        <td>
                            <input class="descripcionGrupo" type="text" value='<%= materiales[i].nombre%>' name=<%= materiales[i].nombre%> id="nombreMaterial" readonly></input>
                        </td>
                         <td>
                            <input class="descripcionGrupo" id="idGrupo" type="text" value='<%= materiales[i].id_grupo%>' name='<%= materiales[i].nombre_grupo%>' readonly></input>
                        </td>
                        <td>
                                <input type="submit" value='Editar'/> &nbsp;
                            </form>
                            <form action="/detalleMaterial"  method="POST">
                                <input type="hidden" value=<%= materiales[i].id_referencia%> name="idMaterial" readonly></input>
                                <input type="submit" value='Detalle'/> &nbsp;
                            </form>
                            <!--
                            <form action="/eliminarGrupo" method="post"> 
                                <input type="hidden" value=<%= materiales[i].id_referencia%> name="idGrupo" ></input>
                                <input type="submit" value="Borrar"/> &nbsp;
                            </form>
                            --> 
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
        </div>
    </div>
</body>