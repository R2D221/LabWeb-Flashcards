</head>
<body>
	<div align=left id="header">
		<img src="img/small-logo.png"/> <label id="title">CEREBRATON</label>
        <label id="nusuario"> Bienvenido <%= usuario %> </label>
    </div>
    <div id="menu">
        <table id="lista">
        <td class="seccion"><a href="/entrada">Inicio</a></td>
        <td class="seccion"><a href="perfilProfesor.ejs">Perfil</a></td>
        <td class="seccion"><a href="/grupos">Grupos</a></td>
        <td class="seccion"><a href="/agregarMaterial">Materiales</a></td>
        <td class="seccion"><a href="/estadisticas">Estadisticas</a></td>
        </table>
    </div>
    <div id="body" align=center>
        <div id="tituloSeccion">
        Grupos
        </div>
        <div id="inicial">
        <div id="gpo"> 
             <input type="button" onclick=" location.href='crearGrupo'" value="Agregar Grupo" name="boton" />
            <br/>
            <input type="button" onclick=" location.href='agregarPregunta'" value="Agregar Preguntas" name="boton" />
            <table id="concentrado">
                <th> Clave </th>
                <th> Nombre </th>
                <th> Opciones </th>        
                <% for(var i=0; i < grupos.length; i++) { %>
                    <form action="/cambiosGrupo" method="POST">
                    <tr>
                        <td> 
                             <input type="text" value=<%= grupos[i].id_grupo%> name="idGrupo" readonly></input> 
                        </td>
                        <td>
                            <input class="descripcionGrupo" type="text" value='<%= grupos[i].nombre%>' name=<%= grupos[i].nombre%>></input>
                        </td>
                        <td>
                                <input type="submit" value='Editar'/> &nbsp;
                            </form>
                            <form action="/detalle"  method="POST">
                                <input type="hidden" value=<%= grupos[i].id_grupo%> name="idGrupo" ></input>
                                <input type="submit" value='Detalle'/> &nbsp;
                            </form>
                            <!--
                            <form action="/eliminarGrupo" method="post"> 
                                <input type="hidden" value=<%= grupos[i].id_grupo%> name="idGrupo" ></input>
                                <input type="submit" value="Borrar"/> &nbsp;
                            </form>
                            --> 
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
        </div>
    </div>
</body>