<head>
    <title>Flashcards</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/Perfilprofesor.css" />
    <link rel="stylesheet" href="css/selecciona.css" />
    <script src="js/jquery-1.11.3.js" type="text/javascript"></script>
    <link href='https://fonts.googleapis.com/css?family=Ubuntu:500italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oswald:700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Abel' rel='stylesheet' type='text/css'>
    <script src="js/Actualizarprofesor.js"></script>
</head>
<body>
    <div align=left id="header">
        <img src="img/small-logo.png"/> <label id="title">CEREBRATÓN</label>
        <label id="nusuario"> Bienvenido <%= usuario %></label>
    </div>
    <div id="menu">
        <table id="lista">
        <td class="seccion"><a href="/entrada">Inicio</a></td>
        <td class="seccion seleccionado"><a href="perfilProfesor.ejs">Perfil</a></td>
        <td class="seccion"><a href="/grupos">Grupos</a></td>
        <td class="seccion"><a href="/agregarMaterial">Materiales</a></td>
        <td class="seccion"><a href="/estadisticas">Estadisticas</a></td>
        </table>
    </div>
    <div id="body">
        <div id="TituloSeccion" text-align=center> Perfil Profesor </div>
            <input type="hidden" value="<%= profesor[0].id_profesor %>" />
            <div id="infoNombre" class="forma" > Nombre: <input type="text" id="nombre" maxlength="125" value="<%= profesor[0].nombre %>" readonly /></div><br />
            <div id="infoUsuario" class="forma" >Usuario: <input type="text" id="usuario" maxlength="25" value="<%= profesor[0].usuario %>" readonly/> </div><br />
            <br/>
            <input type="button"  id="cambio" value="Cambiar Contraseña">
            <div id="cambioContrasena">
                <div id="infoPass" class="forma" > Contrase&ntilde;a 
                <input type="password" id="contra1" maxlength="125" value="<%= profesor[0].contrasena %>"/> </div><br />
                <div id="infoPass1" class="forma" > Confirma tu contrase&ntilde;a 
                <input type="password" id="contra2" maxlength="125" value="<%= profesor[0].contrasena %>" /></div><br />
                <input type="submit" value="Actualizar" id="alta" />
            </div>
    </div>
</body>
